<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_line"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Заказ № "
        android:textColor="@color/blue_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ruble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text=" ₽"
        android:textColor="@color/blue_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sketchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Эскиз: "
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/masterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Мастер: "
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/nextSeansTextView"
        app:layout_constraintStart_toStartOf="@+id/sketchLabel"
        app:layout_constraintTop_toBottomOf="@+id/sketchLabel" />

    <TextView
        android:id="@+id/nextSeansTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Следующий сеанс "
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/masterLabel"
        app:layout_constraintTop_toBottomOf="@id/userName" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="8400"
        android:textColor="@color/blue_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ruble"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sketchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рысь"
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sketchLabel"
        app:layout_constraintStart_toEndOf="@+id/sketchLabel"
        app:layout_constraintTop_toTopOf="@+id/sketchLabel" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sketchName"
        app:layout_constraintStart_toEndOf="@+id/sketchName"
        app:layout_constraintTop_toTopOf="@+id/sketchName" />

    <TextView
        android:id="@+id/sketchDurability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 часов"
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sketchName"
        app:layout_constraintStart_toEndOf="@+id/dash"
        app:layout_constraintTop_toTopOf="@+id/sketchName" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Яковлев Денис Сергеевич"
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/masterLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/masterLabel"
        app:layout_constraintTop_toTopOf="@+id/masterLabel" />

    <TextView
        android:id="@+id/sessionFromTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.06.2022 с 13:00 до 17:00"
        android:textColor="@color/blue_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/nextSeansTextView"
        app:layout_constraintStart_toEndOf="@+id/nextSeansTextView"
        app:layout_constraintTop_toTopOf="@+id/nextSeansTextView" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39"
        android:textColor="@color/blue_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/title" />
</androidx.constraintlayout.widget.ConstraintLayout>